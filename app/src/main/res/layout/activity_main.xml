<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="#54FFFFFF"
    tools:context=".MainActivity">

  <EditText
      android:id="@+id/editText"
      android:layout_width="214dp"
      android:layout_height="48dp"
      android:padding="10dp"
      android:layout_marginTop="40dp"
      android:background="@drawable/rounded_edittext"
      android:backgroundTint="@color/common_google_signin_btn_text_dark_disabled"
      android:drawableRight="@drawable/location"
      android:ems="10"
      android:hint="De:"
      android:inputType="textPersonName"
      android:minHeight="48dp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.497"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      tools:ignore="SpeakableTextPresentCheck" />

  <EditText
      android:id="@+id/editText2"
      android:layout_width="213dp"
      android:layout_height="48dp"
      android:layout_marginTop="24dp"
      android:background="@drawable/rounded_edittext"
      android:backgroundTint="@color/common_google_signin_btn_text_dark_disabled"
      android:drawableRight="@drawable/location"
      android:ems="10"
      android:hint="Para:"
      android:inputType="textPersonName"
      android:minHeight="48dp"
      android:padding="10dp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.497"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/editText"
      tools:ignore="SpeakableTextPresentCheck" />


  <TextView
      android:id="@+id/textView2"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="12dp"
      android:layout_marginEnd="200dp"
      android:text="Ida e Volta"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/editText2" />

  <Switch
      android:id="@+id/switch1"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="8dp"
      android:layout_marginEnd="200dp"
      android:minWidth="48dp"
      android:minHeight="48dp"
      app:layout_constraintBottom_toTopOf="@+id/button2"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/textView2" />


  <Button
      android:id="@+id/button2"
      android:layout_width="341dp"
      android:layout_height="48dp"
      android:layout_marginTop="110dp"
      android:layout_marginBottom="4dp"
      android:background="@drawable/rounded_edittext"
      android:text="Pesquisar HorÃ¡rios"
      app:layout_constraintBottom_toTopOf="@+id/imageView"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/editText2"
      app:layout_constraintVertical_bias="0.0" />

  <ImageView
      android:id="@+id/imageView"
      android:layout_width="match_parent"
      android:layout_height="409dp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      tools:srcCompat="@drawable/bus" />

</androidx.constraintlayout.widget.ConstraintLayout>